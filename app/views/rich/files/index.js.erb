<%
	unless @search
		@folders = @items.where(simplified_type: 'folder')
		@files = @items.where.not(simplified_type: 'folder')
%>
<% 	if @items.where(simplified_type: 'folder').count > 0 %>
$("#items").append(
	"<%= escape_javascript(render :partial => "file", :collection => @folders, :as => :file) %>"
);
<% 	end %>
<% 	if @items.where.not(simplified_type: 'folder').count > 0 %>
$("#items").append(
	"<%= escape_javascript(render :partial => "file", :collection => @files, :as => :file) %>"
);
<%
		end
	else
%>
	<% unless @items.nil? %>
		$("#items").append(
			"<%= escape_javascript(render :partial => "file", :collection => @items, :as => :file) %>"
		);
	<% end %>
<%
	end
%>